{
  "name": "binaryen.ts",
  "description": "TypeScript bindings for Binaryen",
  "license": "Apache-2.0",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "require": {
        "types": "./dist/types.d.cts",
        "default": "./dist/types.cjs"
      }
    },
    "./binaryen": {
      "import": {
        "types": "./dist/binaryen.d.ts",
        "default": "./dist/binaryen.js"
      },
      "require": {
        "types": "./dist/binaryen.d.cts",
        "default": "./dist/binaryen.cjs"
      }
    }
  },
  "keywords": [
    "webassembly",
    "wasm",
    "compiler",
    "typescript",
    "binaryen"
  ],
  "scripts": {
    "build": "npm run build:binaryen && npm run build:typescript",
    "build:binaryen": "cd binaryen && emcmake cmake . && emmake make binaryen_js",
    "build:typescript": "tsup src/index.ts src/types.ts src/binaryen.ts --format cjs,esm --dts --clean --minify"
  },
  "devDependencies": {
    "tsup": "^8.4.0"
  }
}
